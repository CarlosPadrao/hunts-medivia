{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "Modernizr": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType":"module"
    },
    "rules": {
        "quotes": 0,
        "no-trailing-spaces": 0,
        "no-unused-vars": 0,
        "no-underscore-dangle": 0
    }
}